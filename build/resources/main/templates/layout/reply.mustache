<div class="col-md-8">
    <form>
        <div class="form-group">
            {{#userName}}
                <b id="reply-author">{{userName}}</b>
            {{/userName}}
            {{^userName}}
                <b id="reply-author">Anonymous</b>
            {{/userName}}
        </div>
        <div class="form-group">
            <textarea class="form-control" id="reply-content" style="width:100%; height:70px;" placeholder="댓글을 입력하세요"></textarea>
        </div>
    </form>
    <button type="button" class="btn btn-success" id="btn-reply-save" style="float:right;">작성</button>
</div>

<h4 class="mt-3">Comments</h4>
<div class="mt-3 border-bottom">
    {{#reply}}
        <div class="border-top pt-1 pb-1">
            <div class="row">
                <div class="col-3 col-md-2">
                    <b>{{author}}</b><br>
                    <small class="d-block">{{modifiedDate}}</small>
                </div>
                <div class="col-9 col-md-10 col-lg-11">
                    <div class="comment-show">
                        <div class="comment-text mb-3">{{content}}</div> <!-- 1-4 -->
                    </div>
                </div>
            </div>
        </div>
    {{/reply}}
</div>